<com.ruesga.android.wallpapers.photophase.widgets.PictureItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/picture"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="1dp">

    <com.ruesga.android.wallpapers.photophase.widgets.SquareImageView
        android:id="@+id/picture_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:background="@color/album_thumbnail_color"
        android:contentDescription="@null"/>

    <View
        android:id="@+id/picture_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_translucent"/>

    <CheckBox
        android:id="@+id/picture_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:theme="@style/PhotoPhaseTheme.PictureCheckBox"/>

    <ImageView
        android:id="@+id/picture_expand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:src="@drawable/ic_expand"
        android:padding="3dp"
        android:contentDescription="@null"/>

</com.ruesga.android.wallpapers.photophase.widgets.PictureItemView>
